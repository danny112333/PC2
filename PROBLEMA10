def convertir_fecha(fecha):
    # Dividir la fecha en mes, día y año
    partes = fecha.split('/')
    mes = partes[0].zfill(2)
    dia = partes[1].zfill(2)
    año = partes[2]
    
    # Formatear la fecha
    fecha_formateada = f"{año}-{mes}-{dia}"
    return fecha_formateada

fecha = "9/8/1636"
print(convertir_fecha(fecha))  # Output: 1636-09-08
